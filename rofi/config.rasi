configuration {
    modi: "drun";
    show-icons: true;
    display-drun: "ï€‚";
    drun-display-format: "{name}";
}

@theme "/dev/null"

* {
    /* Nord Colors */
    nord0: #2e3440;
    nord1: #3b4252;
    nord2: #434c5e;
    nord3: #4c566a;
    nord4: #d8dee9;
    nord8: #88c0d0;

    background-color: transparent;
    text-color: @nord4;
}

window {
    background-color: @nord0;
    border: 2px;
    border-color: @nord3;
    border-radius: 15px;
    width: 600px;
    padding: 20px;
}

mainbox {
    children: [ inputbar, listview ];
}

inputbar {
    background-color: @nord1;
    border-radius: 10px;
    margin: 0 0 10px 0;
    padding: 10px;
    children: [ prompt, entry ];
}

prompt {
    text-color: @nord8;
    padding: 0 10px 0 5px;
}

listview {
    lines: 10;
    columns: 1;
    spacing: 5px;
}

element {
    padding: 8px;
    border-radius: 8px;
}

element selected {
    background-color: @nord2;
    text-color: @nord8;
}
