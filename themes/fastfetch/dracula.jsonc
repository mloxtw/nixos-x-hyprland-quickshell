{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "file",
        "source": "~/.config/themes/fastfetch/draculas.txt",
        "padding": {
            "top": 1,
            "left": 2
        },
        "color": {
            "1": "#6272A4",   // Dracula comment/dark purple
            "2": "#BD93F9",   // Dracula purple
            "3": "#FF79C6"    // Dracula pink
        }
    },
    "display": {
        "separator": " ➜ ",
        "color": {
            "keys": "#6272A4",   // Dracula comment (darker)
            "separator": "#BD93F9"  // Dracula purple
        }
    },
    "modules": [
        {
            "type": "title",
            "format": "{user-name}@{host-name}",
            "keyColor": "#FF79C6"  // Dracula pink
        },
        {
            "type": "separator",
            "string": "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        },
        {
            "type": "os",
            "key": " OS",
            "keyColor": "#6272A4"  // Dracula comment (darker)
        },
        {
            "type": "kernel",
            "key": " Kernel",
            "keyColor": "#BD93F9"  // Dracula purple
        },
        {
            "type": "uptime",
            "key": " Uptime",
            "keyColor": "#FF79C6"  // Dracula pink
        },
        {
            "type": "separator",
            "string": "─────────────────────────────────────"
        },
        {
            "type": "wm",
            "key": " WM",
            "keyColor": "#6272A4"  // Dracula comment (darker)
        },
        {
            "type": "terminal",
            "key": " Terminal",
            "keyColor": "#BD93F9"  // Dracula purple
        },
        {
            "type": "shell",
            "key": " Shell",
            "keyColor": "#FF79C6"  // Dracula pink
        },
        {
            "type": "separator",
            "string": "─────────────────────────────────────"
        },
        {
            "type": "cpu",
            "key": " CPU",
            "keyColor": "#6272A4"  // Dracula comment (darker)
        },
        {
            "type": "gpu",
            "key": "󰢮 GPU",
            "keyColor": "#BD93F9"  // Dracula purple
        },
        {
            "type": "memory",
            "key": " Memory",
            "keyColor": "#FF79C6"  // Dracula pink
        },
        {
            "type": "disk",
            "key": "󰋊 Disk",
            "keyColor": "#6272A4"  // Dracula comment (darker)
        },
        {
            "type": "separator",
            "string": "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        },
        {
            "type": "colors",
            "symbol": "circle"
        }
    ]
}
