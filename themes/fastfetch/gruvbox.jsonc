{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "file",
        "source": "~/.config/themes/fastfetch/gruvboxes.txt",
        "padding": {
            "top": 1,
            "left": 2
        },
        "color": {
            "1": "yellow",
            "2": "red",
            "3": "green"
        }
    },
    "display": {
        "separator": " ➜ ",
        "color": {
            "keys": "yellow",
            "separator": "red"
        }
    },
    "modules": [
        {
            "type": "title",
            "format": "{user-name}@{host-name}",
            "keyColor": "red"
        },
        {
            "type": "separator",
            "string": "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        },
        {
            "type": "os",
            "key": " OS",
            "keyColor": "yellow"
        },
        {
            "type": "kernel",
            "key": " Kernel",
            "keyColor": "green"
        },
        {
            "type": "uptime",
            "key": " Uptime",
            "keyColor": "red"
        },
        {
            "type": "separator",
            "string": "─────────────────────────────────────"
        },
        {
            "type": "wm",
            "key": " WM",
            "keyColor": "yellow"
        },
        {
            "type": "terminal",
            "key": " Terminal",
            "keyColor": "green"
        },
        {
            "type": "shell",
            "key": " Shell",
            "keyColor": "red"
        },
        {
            "type": "separator",
            "string": "─────────────────────────────────────"
        },
        {
            "type": "cpu",
            "key": " CPU",
            "keyColor": "yellow"
        },
        {
            "type": "gpu",
            "key": "󰢮 GPU",
            "keyColor": "green"
        },
        {
            "type": "memory",
            "key": " Memory",
            "keyColor": "red"
        },
        {
            "type": "disk",
            "key": "󰋊 Disk",
            "keyColor": "yellow"
        },
        {
            "type": "separator",
            "string": "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        },
        {
            "type": "colors",
            "symbol": "circle"
        }
    ]
}
